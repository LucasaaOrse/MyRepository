<%- include ('../../partials/header.ejs') %>

<div class="container mt-4">
    <h2 class="mb-4">Artigos</h2>
    <a href="/admin/articles/new" class="btn btn-primary">Criar novo artigo</a> <br><br>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Título</th>
                <th scope="col">Slug</th>
                <th scope="col">Categoria</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach(article => { %>
                <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.slug %></td>
                <td><%= article.category.title %></td>
                <td>
                    <form action="/articles/delete" method="post" style="display:inline;" onsubmit="confirmarDelecao(event, this )">
                    <input type="hidden" name="id" value="<%= article.id %>">
                    <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                </form></td>

                </tr>
            <% }) %>  
        </tbody>
    </table>
</div>


<%- include ('../../partials/footer.ejs') %>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault()
        var decision = confirm("Voce quer deletar este artigo?")
        if(decision){
            form.submit()
        }

    }    

</script>