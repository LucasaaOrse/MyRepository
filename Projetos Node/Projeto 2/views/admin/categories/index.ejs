<%- include ('../../partials/header.ejs') %>

<div class="container mt-4">
    <h2 class="mb-4">Categorias</h2>
    <a href="/admin/categories/new" class="btn btn-primary">Nova Categoria</a> <br><br>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Título</th>
                <th scope="col">Slug</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
                <tr>
                    <td><%= category.id %></td>
                    <td><%= category.title %></td>
                    <td><%= category.slug %></td>
                    <td>
                        <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-sm btn-warning">Editar</a>
                        <form action="/categories/delete" method="post" style="display:inline;" onsubmit="confirmarDelecao(event, this )">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>


<%- include ('../../partials/footer.ejs') %>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault()
        var decision = confirm("Voce quer deletar esta categoria?")
        if(decision){
            form.submit()
        }

    }    

</script>