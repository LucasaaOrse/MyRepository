<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Games</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <hr>
    <ul id="games"></ul>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        alert("O script carregou!");
        console.log(axios);
    </script>

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        console.log("Iniciando requisição..."); // Verifica se o script está rodando
    
        axios.get("https://organic-space-spork-7gqrr97pj7fx95-8000.app.github.dev/games")
            .then(response => {
                var games = response.data
                var list = document.getElementById("games")

                games.forEach(game => {
                    var item = document.createElement("li")
                    item.innerHTML = game.title + " - " + game.year + " - R$" + game.price
                    list.appendChild(item)
                });
            })
            .catch(error => {
                console.log("Erro na requisição:", error);
            });
    
        console.log("Requisição enviada...");
    </script>
    

</body>
</html>